<!DOCTYPE html>
<html>
  <%- include('./partials/header'); -%>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2"><%- include('./partials/sidebar'); -%></div>
        <div class="col-sm-10">
          <h1><%= title %></h1>
          <form method="post">
            <div class="form-group">
              <label for="first_name">First Name:</label>
              <input type="text" id="first_name" class="form-control"
              placeholder="First name(Christian)" name="first_name" required
              value= "<%- ( undefined === author ) ? "": author.first_name %>"
              />
              <label for="family_name">Family Name:</label>
              <input type="text" id="family_name" class="form-control"
              placeholder="Family name(Surname)" name="family_name" required
              value= "<%- ( undefined === author ) ? "": author.family_name %>"
              />
            </div>
            <div class="form-group">
              <label for="date_of_birth">Date of birth:</label>
              <input type="date" id="date_of_birth" class="form-control"
              name="date_of_birth" required value= "<%- ( undefined === author )
              ? "": author.date_of_birth %>" />
            </div>
            <div class="form-group">
              <label for="date_of_death">Date of death:</label>
              <input type="date" id="date_of_death" class="form-control"
              name="date_of_death" required value= "<%- ( undefined === author )
              ? "": author.date_of_death %>" />
            </div>
            <button class="btn btn-primary" type="submit">Submit</button>
          </form>

          <% if(errors){ %>
          <ul>
            <% errors.forEach((error)=>{ %>
            <li><%= error.msg %></li>
            <% }); %>
          </ul>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
