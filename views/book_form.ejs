<!DOCTYPE html>
<html>
  <%- include('./partials/header'); -%>

  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2"><%- include('./partials/sidebar'); -%></div>
        <div class="col-sm-10">
          <h1><%= title %></h1>
          <form method="post">
            <div class="form-group">
              <label for="title">Title:</label>
              <input type="text" id="title" class="form-group" placeholder="Name
              of book" name="title" required value="<%- ( undefined === book ) ?
              "": book.title %>">
            </div>
            <div class="form-group">
              <label for="author">Author:</label>
              <select name="author" id="author" class="form-control" required>
                <option value="">Please select an author--</option>
                <% authors.forEach((author)=>{ %> <% if(book){ %> <%
                if(author._id.toString()===book.author._id.toString()){ %>
                <option value="<%= author._id %>" selected>
                  <%= author.name %>
                </option>
                <% }else{ %>
                <option value="<%= author._id %>"><%= author.name %></option>
                <% } %> <% }else{ %>
                <option value="<%= author._id %>"><%= author.name %></option>
                <% } %> <% }); %>
              </select>
            </div>
            <div class="form-group">
              <label for="summary">Summary</label>
              <textarea
                name="summary"
                id="summary"
                class="form-control"
                required
              >
                    <% undefined === book? '' : book.summary %>
                </textarea
              >
            </div>
            <div class="form-group">
              <label for="isbn">ISBN:</label>
              <input type="text" id="isbn" class="form-control"
              placeholder="ISBN13" name="isbn" value="<%- ( undefined === book )
              ? "": book.isbn %>" required>
            </div>

            <div class="form-group">
              <label for="">Genre:</label>
              <div>
                <% genres.forEach((genre)=>{ %>
                <div style="display: inline; padding-right: 10px">
                  <% if(genre.checked){ %>
                  <input
                    type="checkbox"
                    name="genre"
                    id="<%= genre._id %>"
                    value="<%= genre._id %>"
                    checked
                    class="checkbox-input"
                  />
                  <% }else{ %>
                  <input
                    type="checkbox"
                    name="genre"
                    id="<%= genre._id %>"
                    value="<%= genre._id %>"
                    class="checkbox-input"
                  />
                  <label for="<%= genre._id %>">
                    &nbsp; <%= genre.name%>
                  </label>
                  <% } %>
                </div>
                <% }); %>
              </div>
            </div>
            <button class="btn btn-primary" type="submit">Submit</button>
          </form>

          <% if(errors){ %>
          <ul>
            <% errors.forEach((error)=>{ %>
            <li><%= error.msg %></li>
            <% }); %>
          </ul>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
