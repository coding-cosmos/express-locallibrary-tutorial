<!DOCTYPE html>
<html>
    <%- include('./partials/header'); -%>
  <body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2">
                <%- include('./partials/sidebar'); -%>
            </div>
            <div class="col-sm-10">
              <h1><%= title %>: <%= book.title %> </h1>
        
              <% if(bookInstances.length){ %>
                <p><strong>Delete the following bookinstances before attempting to delete this book.</strong></p>
                <div style='margin-left:20px;margin-top:20px'>
                    <h4>Books</h4>
                    <dl>
                        <% bookInstances.forEach((bookinstance)=>{ %>
                            <dt><a href=<%= bookinstance.url %>><%= bookinstance.imprint %></a></dt>
                            <dd><%= bookinstance.status %></dd>
                        <% }); %>
                    </dl>
                </div>
              <% }else{ %>
                <p>Do you really want to delete this Book?</p>
                <form method="post">
                    <div class="form-group">
                        <input type="hidden" id="bookid" class="form-control" name="bookid" value= "<%= book._id %>" >
                    </div>
                    <button class="btn btn-primary" type="submit">Delete</button>
                </form>
              <% } %>
            </div>
        </div>
    </div>
  </body>
</html>
