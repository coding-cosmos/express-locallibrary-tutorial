<!DOCTYPE html>
<html>
    <%- include('./partials/header'); -%>
  <body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-2">
                <%- include('./partials/sidebar'); -%>
            </div>
            <div class="col-sm-10">
              <h1> Genre: <%= genre.name  %></h1>
              <div style="margin-left: 20px; margin-top: 20px;">
                <h2 style="font-size: 1.5rem;">Books</h2>

               <% if(genre_books.length){ %>
                    <dl>
                       <% genre_books.forEach((book)=>{ %>
                            <dt>
                                <a href= <%= book.url %>>
                                    <%= book.title %>
                                </a>
                            </dt>
                            <dd>
                                <%= book.summary %>
                            </dd>
                       <% }); %>
                    </dl>
               <% }else{ %>
                        <p>This genre has no books</p>
               <% } %>
              </div>
              <hr>
              <p><a href=<%= genre.url+'/delete' %>>Delete Genre</a></p>
              <p><a href=<%= genre.url+'/update' %>>Update Genre</a></p>
            </div>
        </div>
    </div>
  </body>
</html>
