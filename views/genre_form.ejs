<!DOCTYPE html>
<html>
  <%- include('./partials/header'); -%>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2"><%- include('./partials/sidebar'); -%></div>
        <div class="col-sm-10">
          <h1><%= title %></h1>

          <form method="post">
            <div class="form-group">
              <label for="name">Genre:</label>
              <input
                type="text"
                id="name"
                class="form-control"
                placeholder="Fantasy, Poetry etc."
                name="name"
                required
                value=  "<%- ( undefined === genre )  ?  "": genre.name %>"
              />
            </div>
            <button class="btn btn-primary" type="submit">Submit</button>
          </form>

          <% if(errors){ %>
            <ul>
                <% errors.forEach((error)=>{ %>
                    <li><%= error.msg %></li>
                <% }); %>
            </ul>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
